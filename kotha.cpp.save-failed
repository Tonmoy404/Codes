#include<bits/stdc++.h>
using namespace std;
int main(){
	    long long t,sum = 0; cin >> t;
	    while(t--){
	    	long long n; cin >> n;
	    	 vector<int>v;

	        	for(int i=0; i<n; i++){
	                int x;	 cin >> x;
	                v.push_back(x);
	    	    	sum+=v[i];

			}

	    		if(sum == n) cout << 0 << endl;
	    		else if(sum > n)  cout << sum-n << endl;
	    		else 	cout << 1 << endl;

   }
	return 0;
}
